%head
  %title= yield :title
  = stylesheet_link_tag 'application'
  = csrf_meta_tag
%body
  .navbar
    .navbar-inner
      .container
        = link_to '<%= app_name %>', root_path, class: 'brand'
  .container
    .row
      - flash.each do |level, message|
        = render_flash level, message

    .row
      = yield

  = javascript_include_tag 'application'
